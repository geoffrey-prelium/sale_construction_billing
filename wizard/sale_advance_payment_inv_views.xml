<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_advance_payment_inv_construction" model="ir.ui.view">
        <field name="name">sale.advance.payment.inv.construction</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='advance_payment_method']" position="after">
                <field name="situation_percentage" 
                       invisible="advance_payment_method != 'progress_situation'"
                       required="advance_payment_method == 'progress_situation'"/>
            </xpath>
        </field>
    </record>
</odoo>
